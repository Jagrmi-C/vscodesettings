// https://code.visualstudio.com/docs/getstarted/settings
{
    // "python.pythonPath": "/usr/bin/python3.7",
    "python.pythonPath": "/home/jarmi/JPr/overlayDir/merged/bin/python",
    "editor.rulers": [
        80
    ],
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintArgs": [
        "--disable=all",
        "--enable=F,E",
        // "--enable=R,C",
        "--enable=trailing-whitespace",
        "--enable=trailing-newlines",
        "--enable=unused-import",
        "--enable=unnecessary-semicolon",
        "--enable=global-variable-not-assigned",
        "--enable=unused-variable",
        "--enable=binary-op-exception",
        "--enable=bad-format-string",
        "--enable=anomalous-backslash-in-string",
        "--enable=bad-open-mode",
        "--enable=wrong-import-order",
    ],
    "ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py"
    ],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.venv/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    // Configure glob patterns for excluding files and folders
    "files.exclude": {
        "**/.git": true,
        "**/.venv": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    // When enabled, insert a final new line at the end of the file when saving it.
    "files.insertFinalNewline": true,
    // "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": ["--ignore=C0114", "--ignore=D400"]
}


